
@{
    ViewData["Title"] = "Countries Config.";
    Layout = "~/Views/Shared/_ElaLayout.cshtml";
}

    <h1>@ViewData["Title"]</h1>

    <br />

<div class="row">

    <div class="col-sm-4">

        <div class="card-black">

            <div class="card-subtitle">
                <i class="world icon text-white"></i>
                <span class="content text-white">
                    Create Country
                </span>
            </div>

            <form action="#" id="FormCreateCountry">

                <div class="form-group">

                    <input name="txtCountryName" id="txtCountryName" class="form-control" placeholder="Country Name" required />
                </div>

                <div class="form-group">
                    <input type="submit" value="Create Country" class="btn btn-primary" />
                </div>

                <div id="CreateCountryInfo"> </div>
            </form>


        </div>

        <br />

        <div class="green card-black">

            <div class="card-subtitle">
                <i class="book icon text-white"></i>
                <span class="content text-white">
                    Edit Country
                </span>
            </div>

            <form asp-action="Edit" id="FormEditCountry">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="EditCountryID" />
                <div class="form-group">

                    <input class="form-control" id="EditCountryName" placeholder="Country Name..." />

                </div>
                <div class="form-group">
                    <input type="submit" value="Save Edit" class="btn btn-primary" />
                    <input type="reset" class="btn btn-warning" />
                </div>
            </form>

            <div id="EditCountryInfo"> </div>
        </div>


    </div>

    <div class="col-sm-8">

        <div class="card-black">

            <div class="card-body">

                <h4 class="card-title"> Countries</h4>
                <h6 class="card-subtitle text-warning"> List of all created countries </h6>

                <table id="TableCountries" class="table table-bordered" style="font-size:small">
                    <thead>
                        <tr>
                            <th>
                                Country ID
                            </th>
                            <th>
                                Country Name
                            </th>
                            <th>
                                Created At
                            </th>
                            <th>
                                Updated At
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

</div>


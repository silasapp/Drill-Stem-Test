
@{
    ViewData["Title"] = "Application Type Configuration";
    Layout = "~/Views/Shared/_ElaLayout.cshtml";
}

<h1>
    @ViewData["Title"]
</h1>

<br />

<div class="row">

    <div class="col-sm-4">

        <div class="card-black">

            <div class="card-subtitle">
                <i class="book icon"></i>
                <span class="content">
                    Create Application Type
                </span>
            </div>

            <form action="#" id="FormCreateAppType">

                <div class="form-group">

                    <input name="txtAppTypeName" id="txtAppTypeName" class="form-control" placeholder="App Type Name ..." required />
                </div>

                <div class="form-group">
                    <input type="submit" value="Create App Type" class="btn btn-sm ui blue button" />
                </div>

                <div id="CreateAppTypeInfo"> </div>
            </form>


        </div>

        <br />

        <div class="card-black">

            <div class="card-subtitle">
                <i class="book icon"></i>
                <span class="content">
                    Edit Application Type
                </span>
            </div>

            <form asp-action="Edit" id="FormEditAppType">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="txtEditAppTypeID" />
                <div class="form-group">

                    <input class="form-control" id="txtEditAppTypeName" placeholder="App Type Name ..." />

                </div>
                <div class="form-group">
                    <input type="submit" value="Save Edit" class="btn btn-sm ui blue button" />
                    <input type="reset" value="Clear" class="btn btn-sm ui secondary button" />
                </div>
            </form>

            <div id="EditAppTypeInfo"> </div>
        </div>


    </div>

    <div class="col-sm-8">

        <div class="card-black">

            <div class="card-body">

                <h4 class="card-title"> @ViewBag.Title</h4>
                <h6 class="card-subtitle"> List of all created @ViewBag.Title </h6>

                <table id="TableAppType" class="table table-bordered table-hover" style="font-size:small">
                    <thead>
                        <tr>
                            <th>
                                App Type ID
                            </th>
                            <th>
                                App Type Name
                            </th>
                            <th>
                                Created At
                            </th>
                            <th>
                                Updated At
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>
    </div>
</div>
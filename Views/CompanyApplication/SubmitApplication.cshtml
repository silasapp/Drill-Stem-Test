@using DST.Helpers;
@model IEnumerable<DST.Models.DB.Applications>

@{
    ViewData["Title"] = "Submit Your Application";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    GeneralClass generalClass = new GeneralClass();
}

    <div class="">

        <div class="row" id="BackImage">

            <br />
            <h3 class="DashCompanyName"> @ViewData["Title"] </h3>
            <hr />
        </div>

        <br />


        <div id="SubmitAppDiv">

            @if (Model.Any())
            {

                var app_id = generalClass.Encrypt(Model.FirstOrDefault().AppId.ToString());

                <input type="text" id="txtAppID" readonly hidden value="@generalClass.Encrypt(Model.FirstOrDefault().AppId.ToString())" />

                <div class="alert alert-success text-center">
                    <br />

                    <h3 class="text-success"> You are 1 step away!!! </h3>

                    <br /><br />

                    <p>
                        Kindly click the submit button.
                    </p>

                    <br />

                    <button type="button" id="btnSubmitApp" class="btn btn-success btn-lg m-b-10 m-l-5"> <i class="fas fa-clipboard-check"> </i> Submit Applicatioin</button>

                    <br />
                    <div id="SubmitDivInfo"></div>
                    <br />

                </div>

            }

        </div>

    </div>



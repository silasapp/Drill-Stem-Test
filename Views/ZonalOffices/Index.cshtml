
@{
    ViewData["Title"] = "Zonal Office Config.";
    Layout = "~/Views/Shared/_ElaLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<br />
<div class="row">

    <div class="col-sm-4">

        <div class="card-black">

            <div class="card-subtitle text-white">
                <i class="book icon"></i>
                <span class="content">
                    Create Zonal Office
                </span>
            </div>

            <form action="#" id="FormCreateZonalOffice">

                <div class="form-group">

                    <input name="txtZonalOfficeName" id="txtZonalOfficeName" class="form-control" placeholder="Zonal Office Name ..." required />

                </div>

                <div class="form-group">
                    <input type="submit" value="Create Zonal Office" class="ui olive small button" />
                </div>

                <div id="ZonalOfficeInfo"> </div>
            </form>


        </div>

        <br />

        <div class="card-black">

            <div class="card-subtitle text-white">
                <i class="book icon"></i>
                <span class="content">
                    Edit Zonal Office
                </span>
            </div>

            <form asp-action="Edit" id="FormEditZonalOffice">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" id="txtEditZonalOfficeID" />

                <div class="form-group">

                    <input name="txtEditZonalOffice" id="txtEditZonalOffice" class="form-control" placeholder="Zonal Office Name ..." required />
                </div>

                <div class="form-group">
                    <input type="submit" value="Save Edit" class="ui olive small button" />
                    <input type="reset" class="btn btn-sm small ui grey button" />
                </div>
            </form>

            <div id="EditZonalOfficeInfo"> </div>
        </div>


    </div>

    <div class="col-sm-8">
        <div class="card-black">

            <div class="card-body">

                <h4 class="card-title"> Zonal Offices </h4>
                <h6 class="card-subtitle text-white"> List of all created zonal offices </h6>

                <table id="TableZonalOffice" class="table table-hover table-bordered" style="font-size:small">
                    <thead>
                        <tr>
                            <th>
                                Zonal Office ID
                            </th>
                            <th>
                                Zonal Office Name
                            </th>

                            <th>
                                Created At
                            </th>
                            <th>
                                Updated At
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>
    </div>
</div>
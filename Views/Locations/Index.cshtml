
@{
    ViewData["Title"] = "Locations Config.";
    Layout = "~/Views/Shared/_ElaLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<br />


<div class="row">

    <div class="col-sm-4">

        <div class="card-black">

            <div class="card-subtitle text-white">
                <i class="pin icon"></i>
                <span class="content">
                    Create Location
                </span>
            </div>

            <form action="#" id="FormCreateLocation">

                <div class="form-group">

                    <input name="txtLocationName" id="txtLocationName" class="form-control" placeholder="Location Name ..." required />
                </div>

                <div class="form-group">
                    <input type="submit" value="Create Location" class="btn btn-sm ui green button" />
                </div>

                <div id="CreateLocationInfo"> </div>
            </form>


        </div>

        <br />

        <div class="card-black">

            <div class="card-subtitle text-white">
                <i class="pin icon"></i>
                <span class="content">
                    Edit Location
                </span>
            </div>

            <form asp-action="Edit" id="FormEditLocation">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="EditLocationID" />
                <div class="form-group">

                    <input class="form-control" id="EditLocationName" placeholder="Location Name..." />

                </div>
                <div class="form-group">
                    <input type="submit" value="Save Edit" class="btn btn-sm ui green button" />
                    <input type="reset" class="btn btn-sm ui grey button" />
                </div>
            </form>

            <div id="EditLocationInfo"> </div>
        </div>


    </div>

    <div class="col-sm-8">

        <div class="card-black">

            <div class="card-body">

                <h4 class="card-title"> Locations </h4>
                <h6 class="card-subtitle text-white"> List of all created Locations </h6>

                <table id="TableLocation" class="table table-bordered" style="font-size:small">
                    <thead>
                        <tr>
                            
                            <th>
                                Location Name
                            </th>
                            <th>
                                Created At
                            </th>
                           
                            <th>
                                Updated At
                            </th>
                            
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

</div>
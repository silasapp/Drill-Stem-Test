
@{
    ViewData["Title"] = "Roles Config.";
    Layout = "~/Views/Shared/_ElaLayout.cshtml";
}

    <h1>@ViewData["Title"]</h1>
    <br />
<div class="row">

    <div class="col-sm-4">

        <div class="card-black">

            <div class="card-subtitle text-white">
                <i class="book icon"></i>
                <span class="content">
                    Create User Roles
                </span>
            </div>

            <form action="#" id="FormCreateRole">

                <div class="form-group">

                    <input name="txtRoleName" id="txtRoleName" class="form-control" placeholder="Role Name ..." required />
                </div>

                <div class="form-group">
                    <input type="submit" value="Create Role" class="btn btn-sm ui yellow button" />
                </div>

                <div id="CreateRoleInfo"> </div>
            </form>


        </div>

        <br />

        <div class="card-black">

            <div class="card-subtitle text-white">
                <i class="book icon"></i>
                <span class="content">
                    Edit User Roles
                </span>
            </div>

            <form asp-action="Edit" id="FormEditRole">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="txtEditRoleID" />
                <div class="form-group">

                    <input class="form-control" id="txtEditRoleName" placeholder="Edit role..." />

                </div>
                <div class="form-group">
                    <input type="submit" value="Save Edit" class="btn btn-sm ui yellow button" />
                    <input type="reset" value="Clear" class="btn btn-sm ui secondary button" />
                </div>
            </form>

            <div id="EditRoleInfo"> </div>
        </div>


    </div>

    <div class="col-sm-8">

        <div class="card-black">

            <div class="card-body">

                <h4 class="card-title"> User Roles </h4>
                <h6 class="card-subtitle text-white"> List of all created roles </h6>


                <table id="TableRoles" class="table table-hover table-bordered" style="font-size:small">
                    <thead>
                        <tr>
                            <th>
                                Role ID
                            </th>
                            <th>
                                Role Name
                            </th>
                            <th>
                                Created At
                            </th>
                            <th>
                                Updated At
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>
    </div>
</div>
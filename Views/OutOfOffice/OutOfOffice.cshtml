
@using DST.Helpers;
@using DST.Controllers.Authentications;
@using Microsoft.AspNetCore.Http;

@{
    GeneralClass generalClass = new GeneralClass();


    ViewData["Title"] = "Out Of Office";
    Layout = "~/Views/Shared/_ElaLayout.cshtml";
}

<body>

    <div class="row">

        <div class="col-sm-4">

            <div class="card-black">

                <div class="card-subtitle">
                    <i class="book icon"></i>
                    <span class="content">
                        Create My Out Of Office
                    </span>
                </div>

                <form action="#" id="FormOutOfOffice">

                    <div class="form-group">

                        <br />

                        <label>ME:</label>
                        <b class="text-primary">@generalClass.Decrypt(Context.Session.GetString(AuthController.sessionUserName)) (@generalClass.Decrypt(Context.Session.GetString(AuthController.sessionEmail)))</b>

                        <br /> <br />

                        <label>Reliever (Staff)</label>
                        <select name="txtStaffs" id="txtStaffs" class="form-control" required></select>

                        <br />

                        <div class="row">

                            <div class="col-sm-6">
                                <label>Date From</label>
                                <input type="text" class="form-control" id="txtOutDateFrom" value="" required />

                                <br />
                            </div>

                            <div class="col-sm-6">

                                <label>Date To</label>
                                <input type="text" class="form-control" id="txtOutDateTo" value="" required />
                                <br />

                            </div>

                            <div class="col-sm-12">

                                <label>Comment:</label>

                                <textarea id="txtOutComment" required style="max-width:100%" rows="3" cols="68" placeholder="Some comment here...Max(100)"></textarea>
                            </div>

                        </div>

                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="ui orange button" />
                        <input type="reset" class="btn btn-sm ui grey button" />
                    </div>

                    <div id="CreateOutInfo"> </div>
                </form>


            </div>

            <br />

            <div class="card-black">

                <div class="card-subtitle">
                    <i class="book icon"></i>
                    <span class="content">
                        Edit my out of office
                    </span>
                </div>

                <form asp-action="Edit" id="FormEditOutOfOffice">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" id="EditOutID" />
                    <div class="form-group">

                        <br />

                        <label>ME:</label>
                        <b class="text-primary">@generalClass.Decrypt(Context.Session.GetString(AuthController.sessionUserName)) (@generalClass.Decrypt(Context.Session.GetString(AuthController.sessionEmail)))</b>

                        <br /> <br />

                        <label>Reliever (Staff)</label>
                        <select name="txtEditStaffs" id="txtEditStaffs" class="form-control" required></select>

                        <br />

                        <div class="row">

                            <div class="col-sm-6">
                                <label>Date From</label>
                                <input type="text" class="form-control" id="txtEditOutDateFrom" value="" required />

                                <br />
                            </div>

                            <div class="col-sm-6">

                                <label>Date To</label>
                                <input type="text" class="form-control" id="txtEditOutDateTo" value="" required />
                                <br />

                            </div>

                            <div class="col-sm-12">

                                <label>Comment:</label>

                                <textarea id="txtEditOutComment" required style="max-width:100%" rows="3" cols="68" placeholder="Some comment here...Max(100)"></textarea>
                            </div>

                        </div>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save Edit" class="ui orange  button" />
                        <input type="reset" class="btn btn-sm ui grey button" />
                    </div>
                </form>

                <div id="EditOutInfo"> </div>
            </div>


        </div>

        <div class="col-sm-8">
            <div class="card-black">

                <div class="card-body">

                    <h4 class="card-title"> My Out Of Office List </h4>
                    <h6 class="card-subtitle text-warning"> List of all my out of office </h6>

                    <table id="TableOutOfOffice" class="table table-hover table-bordered table-striped" style="font-size:small">
                        <thead>
                            <tr>
                                <th>
                                    Out ID
                                </th>
                                <th>
                                    ME
                                </th>
                                <th>
                                    Reliever
                                </th>
                                <th>
                                    Date From
                                </th>
                                <th>
                                    Date To
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Created At
                                </th>
                                <th>
                                    Updated At
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</body>